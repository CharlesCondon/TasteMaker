<div class='absolute top-20 lg:top-4 lg:left-40 flex flex-row text-white text-xl lg:text-3xl underline'>
    <a href='/home' class='m-4'>Home</a>
    <a href='/search' class='m-4'>Search</a>
</div>  
<div class='absolute top-20 lg:top-4 right-0 lg:right-40 flex flex-row text-white text-xl lg:text-3xl underline'>
    <a href='/account' class='m-4'>Account</a>
    <a href='/contact' class='m-4'>Contact</a>
</div>  

<h1 class='text-white text-6xl text-center pt-4 pb-14 mb-10 lg:mb-10'>Taste Maker</h1>
<div class='flex flex-col justify-center'>
    <h1 class='text-center text-4xl text-white'>Latest Meals</h1>
    {{#each meals}}
    {{#if strSource}}
    <div class='bg-white relative rounded-xl lg:w-1/2 m-auto p-4 my-4 shadow-lg recipe'>
        <h1 class='text-3xl text-center p-4'>{{strMeal}}</h1>
        <img src='{{strMealThumb}}' class='rounded-2xl w-1/2 m-auto pb-4  h-auto'>
        <h1 class='text-xl text-center '>Like what you see? Learn more here:<br><a href='{{strSource}}' target="_blank" class='text-indigo-500 underline'>{{strSource}}</a> </h1>
    </div>
    {{/if}}
    {{/each}}
</div>
