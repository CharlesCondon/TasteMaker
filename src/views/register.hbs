<div class='bg-white shadow-lg rounded-xl text-center w-10/12 lg:w-4/12 h-auto lg:h-auto m-auto relative mt-40 lg:mt-52 p-4'>
    <h2 class='text-3xl p-4 '>Register</h2>
    <form method="POST" action="register">
        <input type='text' name='name' placeholder="name" class='bg-gray-300 m-4 rounded-xl p-2' required><br>
        <input type='text' name='username' placeholder="username" class='bg-gray-300 m-4 rounded-xl p-2' required><br>
        <input type="password" name='password' placeholder="password" class='bg-gray-300 m-4 rounded-xl p-2' required><br>
        <input type="submit" value='Submit' class='rounded-2xl p-1 m-4 pl-4 pr-4 bg-indigo-300 mb-10'>
    </form>
    <a href='/login' class='underline'>Login</a>
</div>